<!DOCTYPE html>
<html>
<head>
  <title>VisFig</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag 'jquery'%>
  <%= javascript_include_tag 'd3.min.js'%>
  <%= javascript_include_tag 'highcharts.js'%>

  <%= csrf_meta_tags %>
</head>

<body>
<%= nav_bar :fixed => :top, :brand => "VisFig", :responsive => true do %>
    <%= menu_group do %>
        <%= menu_item "Home", root_path %>
        <%= menu_divider %>
        <%= drop_down "Visualisations" do %>
            <%= menu_item "Bar Charts", visualisations_path %>
        <% end %>
        <%= menu_item "Gallery", figures_path %>
    <% end %>
<% end %>

<%= bootstrap_flash %>

<div class="container" style="margin-top: 50px">
<%= yield %>
</div>

</body>
</html>

